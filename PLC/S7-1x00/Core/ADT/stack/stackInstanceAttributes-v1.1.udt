//| Dependency |
//|:-----------!
// 
//# Description
//Stack instance attributes
//
//#
//--_Use [Markdown Live Preview](https://markdownlivepreview.com/) to watch this doc._
//--*)
   STRUCT
      length : DInt := 0;   // Stack size (current value)
      total : DInt := 0;   // Stack maximum size (constant value)
      isEmpty : Bool := 1;   // 1=Stack is empty
      isFull : Bool := 0;   // 1=Stack is full
      isInitialized : Bool := 0;   // 1=Stack is initialized
      mutex : Bool := 0;   // Used to block or enable access to queue (User defines the rules)
   END_STRUCT;

END_TYPE

