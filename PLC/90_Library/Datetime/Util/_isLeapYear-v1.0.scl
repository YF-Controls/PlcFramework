{ S7_Optimized_Access := 'TRUE' }
AUTHOR : cyanezf
FAMILY : 'Datetime/Util'
NAME : _isLeapYear
VERSION : 1.0
   VAR_INPUT 
      year : UInt;   // Year value
   END_VAR

   VAR_TEMP 
      isLeap : Bool;
   END_VAR


BEGIN
	(*--
	
	# Log
	| version | date | author | description |
